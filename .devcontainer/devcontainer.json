{
  "build": {
    "dockerfile": "Dockerfile", // Verweis auf Ihr benutzerdefiniertes Dockerfile
    "context": "."
  },
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "python3 -m pip install -r requirements.txt",
  "postStartCommand": "redis-server --loadmodule /usr/lib/redis/modules/redisearch.so --daemonize yes",
  "customizations": {
    "codespaces": {
      "openFiles": []
    },
    "vscode": {
      "extensions": [
        "ms-toolsai.jupyter",
        "ms-python.python"
      ]
    }
  }
}